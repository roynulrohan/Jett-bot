{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "./src/",
        "outDir": "./build/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": ["node_modules/@types"],
        "sourceMap": false,
        "baseUrl": "./"
    }
}
